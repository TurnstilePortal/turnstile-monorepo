{
  "search.exclude": {
    "**/node_modules": true
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "[markdown]": {
    "editor.tabSize": 4
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": false,
    "editor.tabSize": 4
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[noir]": {
    "editor.formatOnSave": false
  }
}
