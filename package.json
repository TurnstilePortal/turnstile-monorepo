{
  "name": "turnstile-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TurnstilePortal/turnstile-monorepo.git"
  },
  "scripts": {
    "build": "pnpm recursive run build",
    "build-artifacts": "pnpm recursive run --filter \"@turnstile-portal/*artifacts*\" build",
    "build-packages": "pnpm recursive run --filter \"@turnstile-portal/*\" build",
    "test": "pnpm -r run test",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "publish-packages": "changeset publish",
    "clean": "pnpm recursive run clean ; rm -rf node_modules/*",
    "repl": "tsx packages/repl/src/repl.ts",
    "lint": "biome lint --fix",
    "format": "biome format --fix",
    "check": "biome check --fix",
    "update-aztec-version": "tsx scripts/update-aztec-deps.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/cli": "^2.29.6",
    "@types/node": "^22.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "glob": "^11.0.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
