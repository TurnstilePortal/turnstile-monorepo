{
  "name": "turnstile-contracts",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TurnstilePortal/turnstile-contracts.git"
  },
  "scripts": {
    "build": "pnpm recursive run build",
    "build-artifacts": "pnpm recursive run --filter \"@turnstile-portal/*artifacts*\" build",
    "build-packages": "pnpm recursive run --filter \"@turnstile-portal/*\" build",
    "test": "pnpm -r run test",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "publish-packages": "changeset publish",
    "clean": "pnpm recursive run clean ; rm -rf node_modules/*",
    "repl": "tsx packages/repl/src/repl.ts",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "update-aztec-version": "tsx scripts/update-aztec-deps.ts"
  },
  "pnpm": {
    "overrides": {
      "@aztec/**": "0.87.9"
    }
  },
  "resolutions": {
    "@aztec/**": "0.87.9"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.29.4",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.15.32",
    "@vitest/coverage-v8": "^2.1.9",
    "glob": "^11.0.3",
    "node-gyp": "^11.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
